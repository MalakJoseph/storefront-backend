{
  "name": "storefront_backend",
  "version": "1.0.0",
  "description": "A project by Udacity to apply (Nodejs, Express & routes, unit tests with Jasmine, eslint, and prettier)",
  "main": "server.ts",
  "author": "Malak Joseph",
  "homepage": "https://github.com/MalakJoseph/storefront-backend#readme",
  "license": "ISC",
  "scripts": {
    "clean": "rimraf dist/",
    "build": "yarn clean && tsc",
    "start": "yarn build && node dist/server.js",
    "dev": "nodemon src/server.ts",
    "migrate-up": "db-migrate up",
    "migrate-reset": "db-migrate reset",
    "test": "cross-env NODE_ENV=test yarn build && yarn migrate-reset -e test && yarn migrate-up -e test && cross-env NODE_ENV=test jasmine && yarn migrate-reset -e test",
    "lint": "eslint . --ext .ts",
    "prettier": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.19.0",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.5.1",
    "supertest": "^6.3.3",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.9",
    "@types/jasmine": "^4.3.1",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "cross-env": "^7.0.3",
    "jasmine": "^4.5.0",
    "jasmine-spec-reporter": "^7.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1"
  }
}
